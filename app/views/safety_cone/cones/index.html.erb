<div class="row">
  <div class="col s6 offset-s3">
    <br>
    <strong>Paths</strong>
    <hr />
    <% @paths.each do |cone, options| %>

      <div class="row">
        <div class="col s6">
          <%= options[:name] %>
        </div>

        <div class="col s3">
          <div class="chip status-<%= status(cone) %>">
            <%= status(cone) %>
          </div>
        </div>

        <div class="col s3">
          <%= link_to 'edit', edit_cone_path(cone), class: 'waves-effect waves-light btn' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

